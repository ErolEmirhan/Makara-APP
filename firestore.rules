rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sales koleksiyonu - sadece okuma (admin dashboard için)
    match /sales/{saleId} {
      allow read: if true; // PIN kontrolü frontend'de yapılacak
      allow write: if false; // Sadece Electron uygulaması yazabilir (Firebase Admin SDK ile)
    }
  }
}











