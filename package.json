{
  "name": "makara-pos",
  "version": "2.5.2",
  "description": "MAKARA - Modern POS Uygulaması",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "clean": "node -e \"const fs = require('fs'); const path = require('path'); const os = require('os'); function rmDir(dir) { if (fs.existsSync(dir)) { fs.readdirSync(dir).forEach(f => { const curPath = path.join(dir, f); if (fs.lstatSync(curPath).isDirectory()) rmDir(curPath); else fs.unlinkSync(curPath); }); fs.rmdirSync(dir); } } try { rmDir('release'); console.log('Release klasörü temizlendi'); } catch(e) { console.log('Temizleme atlandı (normal):', e.message); } try { const buildDir = path.join(os.homedir(), '..', 'Makara-APP-Builds'); if (fs.existsSync(buildDir)) rmDir(buildDir); } catch(e) {} \"",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run clean && npm run build && electron-builder --win",
    "build:win:publish": "npm run clean && npm run build && electron-builder --win --publish always",
    "preview": "vite preview",
    "version:bump": "node scripts/update-version.js",
    "deploy": "npm run version:bump && firebase deploy --only hosting"
  },
  "keywords": [
    "electron",
    "pos",
    "makara"
  ],
  "author": "MAKARA",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.955.0",
    "@aws-sdk/s3-request-presigner": "^3.955.0",
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "firebase": "^10.14.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
    "build": {
      "appId": "com.makara.pos",
      "productName": "MAKARA POS",
      "directories": {
        "output": "../Makara-APP-Builds"
      },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MAKARA POS",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "multiLanguageInstaller": true,
      "runAfterFinish": true,
      "menuCategory": "Business",
      "artifactName": "MAKARA-POS-Setup-${version}.${ext}",
      "differentialPackage": true
    },
    "publish": {
      "provider": "github",
      "owner": "ErolEmirhan",
      "repo": "Makara-APP"
    }
  }
}
