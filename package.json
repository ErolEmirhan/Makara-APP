{
  "name": "makara-pos",
  "version": "2.0.6",
  "description": "MAKARA - Modern POS UygulamasÄ±",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:win:publish": "npm run build && electron-builder --win --publish always",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "pos",
    "makara"
  ],
  "author": "MAKARA",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "firebase": "^10.14.1",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.makara.pos",
    "productName": "MAKARA POS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": null,
      "signingHashAlgorithms": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MAKARA POS",
      "warningsAsErrors": false,
      "displayLanguageSelector": true,
      "multiLanguageInstaller": true,
      "runAfterFinish": true,
      "menuCategory": "Business",
      "artifactName": "MAKARA-POS-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "ErolEmirhan",
      "repo": "Makara-APP"
    }
  }
}
